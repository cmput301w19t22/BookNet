<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.booknet">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.ScanActivity"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map_api_key" />

        <activity android:name=".Activities.MapSelectActivity" />
        <activity android:name=".Activities.AccountCreateActivity" />
        <activity android:name=".Activities.ReviewListViewActivity" />
        <activity android:name=".Dialogs.VerifyBorrowDialog" />
        <activity android:name=".Activities.ProfileEditActivity" />
        <activity android:name=".Activities.RequestsViewActivity" />
        <activity android:name=".Activities.OwnListingViewActivity" />
        <activity android:name=".Dialogs.NewBookDialog" />
        <activity android:name=".Dialogs.EditBookDialog" />
        <activity android:name=".Fragments.BookSearchFragment">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".Fragments.UserProfileViewFragment" />
        <activity android:name=".Activities.ListingViewActivity" />
        <activity android:name=".Fragments.OwnedLibraryFragment" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".Dialogs.PhotoEditDialog" />
        <activity
            android:name=".Model.Portrait"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".Activities.LoginPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>