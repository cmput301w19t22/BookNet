<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Background-->
    <item
        android:bottom="4dp"
        android:gravity="center">
        <selector>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/lightDarkerTint" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
        </selector>
    </item>

    <!--Underline-->
    <item
        android:bottom="0dp"
        android:left="-4dp"
        android:right="-4dp"
        android:top="-6dp">
        <selector>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <size android:height="4dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/colorAccent"
                        android:dashWidth="8dp" />
                    <padding
                        android:bottom="4dp"
                        android:left="4dp"
                        android:right="4dp"
                        android:top="4dp" />
                    <corners android:radius="10dp" />
                </shape>
            </item>

            <!-- Not Selected-->
            <item>
                <shape android:shape="rectangle">
                    <size android:height="4dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/textLightGray"
                        android:dashWidth="8dp" />
                    <corners android:radius="10dp" />

                </shape>
            </item>
        </selector>

    </item>


</layer-list>
