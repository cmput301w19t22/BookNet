<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BookNet.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="BookNet.Toolbar.Button" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:tint">@color/textWhite</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="BookNet.Toolbar.ImageButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@color/transparency</item>
        <item name="android:tint">@color/textWhite</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BookNet.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:iconTint" tools:targetApi="o">@color/navigationIcon</item>
    </style>

    <style name="BookNet.EditText.Login" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_rounded</item>
        <item name="android:padding">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">18dp</item>

    </style>

    <style name="BookNet.EditText.OnWhite" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_onwhite</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">18dp</item>

    </style>

    <style name="BookNet.Button.White" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:backgroundTint">@color/mainBackground</item>
        <item name="android:textColor">@color/textMain</item>
        <item name="android:tint">@color/textWhite</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="BookNet.Button.Blue" parent="BookNet.Button.White">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:tint">@color/textWhite</item>
    </style>

    <style name="BookNet.Button.Red" parent="BookNet.Button.White">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:tint">@color/textWhite</item>
    </style>

    <style name="BookNet.Button.Gray" parent="BookNet.Button.White">
        <item name="android:backgroundTint">@color/buttonPrimary</item>
    </style>

    <style name="BookNet.Spinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">@color/textWhite</item>
    </style>

    <style name="BookNet.SearchView" parent="Base.Widget.AppCompat.SearchView">

    </style>

    <style name="BookNet.Text.White" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">18dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="BookNet.Text.White.Small" parent="BookNet.Text.White">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="BookNet.Text.White.Title" parent="BookNet.Text.White">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="BookNet.Text.Main" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textMain</item>
        <item name="android:textSize">18dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="BookNet.Text.Main.Small" parent="BookNet.Text.Main">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="BookNet.Text.Main.Title" parent="BookNet.Text.Main">
        <item name="android:textSize">22dp</item>
    </style>

    <!--<style name="AppActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">-->
    <!--<item name="android:background">ANY_HEX_COLOR_CODE</item>-->
    <!--</style>-->

</resources>
